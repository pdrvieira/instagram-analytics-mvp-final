{
  "name": "instagram-analytics-mvp",
  "version": "0.1.0",
  "description": "Complete MVP web application for Instagram Analytics using Playwright headless automation and Supabase",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/web",
    "apps/worker",
    "apps/edge",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm -r --parallel run dev",
    "build": "pnpm -r run build",
    "lint": "pnpm -r run lint",
    "type-check": "pnpm -r run type-check",
    "test": "pnpm -r run test"
  },
  "devDependencies": {
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
